#!/bin/bash

BUILD="Release"
COMPILER="clang-11"
GENERATOR="Ninja"

CMAKE_BUILD="-DCMAKE_BUILD_TYPE=$BUILD"
CMAKE_COMPILER="-DCMAKE_CXX_COMPILER=$COMPILER -DCMAKE_C_COMPILER=$COMPILER"
CMAKE_GENERATOR="-G $GENERATOR"

rm -rf build
mkdir build
cd build

cmake $CMAKE_GENERATOR $CMAKE_BUILD $CMAKE_COMPILER ..

ninja