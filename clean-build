#!/bin/bash

BUILD="Release"
C_COMPILER="clang-11"
CXX_COMPILER="clang++-11"
GENERATOR="Ninja"

CMAKE_BUILD="-DCMAKE_BUILD_TYPE=$BUILD"
CMAKE_COMPILER="-DCMAKE_CXX_COMPILER=$CXX_COMPILER -DCMAKE_C_COMPILER=$C_COMPILER"
CMAKE_GENERATOR="-G $GENERATOR"

rm -rf build
mkdir build
cd build

cmake $CMAKE_GENERATOR $CMAKE_BUILD $CMAKE_COMPILER ..

# ninja